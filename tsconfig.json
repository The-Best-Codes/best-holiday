{
  "compilerOptions": {
    "lib": ["esnext"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/browser.ts"]
}
